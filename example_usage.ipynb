# Example notebook to preprocess and run O'Connell effect modeling

import numpy as np
import matplotlib.pyplot as plt
from modeling import sp_modeling

# Simulate light curve data (replace with real data)
def simulate_data():
    np.random.seed(42)
    phase = np.linspace(0, 1, 300)
    true_model = lambda x: 1 - 0.2 * np.exp(-((x - 1.0)**2) / (2 * 0.05**2))
    flux = true_model(phase)
    noise = np.random.normal(0, 0.01, size=flux.shape)
    mag = flux + noise
    error = np.full_like(phase, 0.01)
    return phase, mag, error

# Replace this with your own data loading function
def load_your_data():
    # Example: Load from CSV, FITS, or other source
    # phase, mag, error = np.loadtxt('your_data.csv', unpack=True, delimiter=',')
    return simulate_data()

# Load and fold data
phase, mag, error = load_your_data()
phase = phase % 1.0

# Run the modeling function (interactive)
sp_modeling(phase, mag, error)

